---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
import { Image } from "astro:assets";

import "@fontsource/ibm-plex-serif/600.css";

const posts = await getCollection("blog");
const pageTitle = "Home";

const headline: string = "Hi, I'm Jacob";
const cta: string = "I'm a Freelance Web Developer";
const availableForHire: boolean = true;
---

<Layout title="Home">
	<section
		class="bg-myblue-100 dark:bg-myblue-800"
		aria-label="Call to Action">
		<h1
			class="text-4xl font-semibold uppercase lg:text-6xl px-4 py-4 mb-4 font-serif dark:text-white">
			{headline}
		</h1>
		<p
			class="text-3xl font-semibold mx-4 dark:text-neutral-100 dark:text-opacity-90">
			{cta}
		</p>
		<p
			class="ml-4 mt-4 prose prose-sm md:prose-base lg:prose-lg prose-slate dark:prose-invert">
			I am primarily focused on creating accessible, performant, and
			easy-to-use websites using free and open-source technologies such as
			TailwindCSS, Hugo, and Astro. {
				availableForHire
					? "I'm currently available for hire, so feel free to reach out using the button below."
					: ""
			}
		</p>
		<button
			class="p-2 font-bold bg-royal-700 hover:bg-royal-500 transition-colors duration-50 rounded-sm my-4 ml-4 text-sm text-white"
			>Contact Me</button
		>
	</section>
</Layout>
